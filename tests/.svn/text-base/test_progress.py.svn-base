import pyflam3
import unittest
from testing_util import print_test_name

global_test_case = None

def _progress_cb_self(test_case, progress, stage):
    if stage == 1:
        test_case.cancel = True
        return 1
    else:
        return 0

class Flam3ProgressTestCase(unittest.TestCase):
    @print_test_name
    def testCancel(self):
        genome = pyflam3.Genome.from_file('share/test.flam3')[0]
        genome.render(progress_func=pyflam3.ProgressFunction(_progress_cb_self)
                     ,progress_param=self
                     )
        self.assertEqual(self.cancel, True)

