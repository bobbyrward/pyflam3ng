import pyflam3
import wx
import unittest
import flame_test_file
from testing_util import print_test_name

class WxIntegrationTestCase(unittest.TestCase):
    @print_test_name
    def testRenderToImage(self):
        genomes = pyflam3.Genome.from_file('share/test.flam3')

        for genome in genomes:
            image = wx.EmptyImage(*genome.size)

            (buffer, stats) = genome.render(verbose=False, buffer=image.DataBuffer, channels=3)

            name = '%s-wxrender.jpg' % genome.name

            image.SaveFile(name, wx.BITMAP_TYPE_JPEG)

